<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zavagli.weightconverter.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/textViewWeight1"
        android:layout_width="95dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:labelFor="@+id/editTextWeight1"
        android:text="@string/weightLabel1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextWeight1"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/textViewWeight1"
        app:layout_constraintTop_toTopOf="@+id/textViewWeight1" />

    <TextView
        android:id="@+id/textViewWeight2"
        android:layout_width="96dp"
        android:layout_height="41dp"
        android:layout_marginTop="36dp"
        android:labelFor="@+id/editTextWeight2"
        android:text="@string/weightLabel2"
        app:layout_constraintStart_toStartOf="@+id/textViewWeight1"
        app:layout_constraintTop_toBottomOf="@+id/textViewWeight1" />

    <EditText
        android:id="@+id/editTextWeight2"
        android:layout_width="141dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/editTextWeight1"
        app:layout_constraintTop_toTopOf="@+id/textViewWeight2" />
</android.support.constraint.ConstraintLayout>
